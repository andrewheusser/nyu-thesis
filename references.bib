	author = {Klostermann, Fabian and Nikulin, Vadim V. and Kühn, Andrea Annette and Marzinzik, Frank and Wahl, Michael and Pogosyan, Alek and Kupsch, Andreas and Schneider, Gerd-Helge and Brown, Peter and Curio, Gabriel},
