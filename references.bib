	pmid = {21060716},
	pmcid = {PMC2972699},
	keywords = {alpha, cross-frequency coupling, electrocorticogram, gamma, oscillations, phase–amplitude coupling, theta},
	pages = {191}
}

@article{giraud_cortical_2012,
