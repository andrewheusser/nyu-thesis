	keywords = {Algorithms, Animals, Electroencephalography, Entorhinal Cortex, Hippocampus, Learning, Membrane Potentials, Memory, Models, Neurological, Neuronal Plasticity, Psychomotor Performance, Rats, Reversal Learning, Theta Rhythm},
	pages = {793--817}
}

@article{engel_beta-band_2010,
	title = {Beta-band oscillations — signalling the status quo?},
